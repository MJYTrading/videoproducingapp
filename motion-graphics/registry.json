      "params": {
        "name": {"type": "string", "required": true},
        "title": {"type": "string", "required": false},
        "portrait_path": {"type": "string", "required": false},
        "position": {"type": "enum", "options": ["center","left","right"], "default": "center"},
        "overlay": {"type": "boolean", "default": false},
        "duration": {"type": "float", "default": 4.0}
      }
    },
    {
      "id": "person_splitscreen",
      "name": "Person Splitscreen",
      "category": "person",
      "script": "person/person_splitscreen.py",
      "description": "Portret halve scherm met naam + titel + organisatie",
      "when_to_use": "Persoon met rol/organisatie uitgebreid introduceren",
      "when_not": "Korte introductie (→ Person PiP), met citaat (→ Person Quote)",
      "params": {
        "name": {"type": "string", "required": true},
        "title": {"type": "string", "required": false},
        "organization": {"type": "string", "required": false},
        "portrait_path": {"type": "string", "required": false},
        "portrait_side": {"type": "enum", "options": ["left","right"], "default": "left"},
        "accent_color": {"type": "hex_color", "default": "#ff4444"},
        "duration": {"type": "float", "default": 4.0}
      }
    },
    {
      "id": "person_quote",
      "name": "Person Quote",
      "category": "person",
      "script": "person/person_quote.py",
      "description": "Portret + typewriter citaat naast elkaar",
      "when_to_use": "Persoon met hun eigen citaat tonen",
      "when_not": "Citaat zonder foto (→ Quote Card), persoon zonder citaat (→ Person PiP)",
      "params": {
        "name": {"type": "string", "required": true},
        "quote": {"type": "string", "required": true},
        "portrait_path": {"type": "string", "required": false},
        "typing_speed": {"type": "float", "default": 0.04},
        "accent_color": {"type": "hex_color", "default": "#ff4444"},
        "duration": {"type": "float", "default": 5.0}
      }
    }
  ],
  "shared_params": {
    "duration": "Duur in seconden",
